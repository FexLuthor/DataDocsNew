<Window x:Class="WpfApp3.Views.AddressWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      SizeToContent="WidthAndHeight"
      ResizeMode="NoResize"
      Title="AddressWindow">
    <Grid>
        <StackPanel Margin="10"  Background="Azure">
        <TextBlock Text="Address Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock Text="Street:" FontWeight="Bold"/>
        <TextBlock Text="{Binding SelectedPatient.Address.Street}" Margin="0,0,0,10"/>
        <TextBlock Text="Number:" FontWeight="Bold"/>
        <TextBlock Text="{Binding SelectedPatient.Address.Number}" Margin="0,0,0,10"/>
        <TextBlock Text="Town:" FontWeight="Bold"/>
        <TextBlock Text="{Binding SelectedPatient.Address.Town}" Margin="0,0,0,10"/>
        <TextBlock Text="Postal Code:" FontWeight="Bold"/>
        <TextBlock Text="{Binding SelectedPatient.Address.PostalCode}" Margin="0,0,0,10"/>
    </StackPanel>
    </Grid>
</Window>
